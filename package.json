{
  "name": "@vtrbo/utils",
  "type": "module",
  "version": "0.3.1",
  "description": "Collection of common JavaScript or TypeScript utils.",
  "author": {
    "name": "Victor Bo",
    "email": "hi@vtrbo.cn"
  },
  "license": "MIT",
  "keywords": [
    "utils",
    "tools"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "browser": "./dist/index.global.js"
    },
    "./*": {
      "types": "./dist/*/index.d.ts",
      "require": "./dist/*/index.cjs",
      "import": "./dist/*/index.js",
      "browser": "./dist/*/index.global.js"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "browser": "dist/index.global.js",
  "unpkg": "dist/index.global.js",
  "jsdelivr": "dist/index.global.js",
  "types": "dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*/index.d.ts",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "generate": "esno generate/entry.ts",
    "build": "nr generate && tsup",
    "dev": "nr generate && tsup --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "nr build && bumpp && npm publish --access=public",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "playground:dev": "nr -C playground dev",
    "playground:build": "nr -C playground build",
    "docs:dev": "nr -C docs dev",
    "docs:build": "nr -C docs build",
    "docs:serve": "nr -C docs serve"
  },
  "devDependencies": {
    "@types/node": "^18.15.2",
    "@vtrbo/eslint-config": "^0.2.2",
    "@vtrbo/ni": "^0.1.0",
    "bumpp": "^9.0.0",
    "eslint": "^8.36.0",
    "esno": "^0.16.3",
    "fast-glob": "^3.2.12",
    "pnpm": "^7.29.1",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5",
    "vitest": "^0.29.2"
  }
}
