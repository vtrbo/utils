{
  "name": "@vtrbo/utils",
  "type": "module",
  "version": "0.4.0-beta.4",
  "description": "Collection of common JavaScript or TypeScript utils.",
  "author": {
    "name": "Victor Bo",
    "email": "hi@vtrbo.cn"
  },
  "license": "MIT",
  "homepage": "https://github.com/vtrbo",
  "bugs": "https://github.com/vtrbo/utils/issues",
  "keywords": [
    "typescript",
    "javascript",
    "utils",
    "vue",
    "react",
    "vite"
  ],
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.js",
      "require": "./index.cjs"
    }
  },
  "main": "./index.js",
  "module": "./index.js",
  "types": "./index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./*",
        "./index.d.ts"
      ]
    }
  },
  "files": [
    "README.md",
    "index.cjs",
    "index.d.cts",
    "index.d.ts",
    "index.js"
  ],
  "scripts": {
    "build": "pnpm -r run build && tsup",
    "release": "pnpm build && pnpm release:bumpp && pnpm release:publish",
    "release:bumpp": "bumpp -r",
    "release:publish": "pnpm -r publish --access=public",
    "create": "esno scripts/create-package.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:update": "vitest -u",
    "test:coverage": "vitest --coverage",
    "prepare": "npx simple-git-hooks"
  },
  "dependencies": {
    "@vtrbo/utils-is": "workspace:*",
    "@vtrbo/utils-log": "workspace:*",
    "@vtrbo/utils-obj": "workspace:*",
    "@vtrbo/utils-tool": "workspace:*"
  },
  "devDependencies": {
    "@antfu/eslint-config": "1.0.0-beta.26",
    "@types/node": "^20.8.5",
    "@types/shelljs": "^0.8.13",
    "bumpp": "^9.2.0",
    "esno": "^0.17.0",
    "lint-staged": "^15.0.1",
    "ora": "^7.0.1",
    "shelljs": "^0.8.5",
    "simple-git-hooks": "^2.9.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "node vertify-commit.js"
  },
  "lint-staged": {
    "*": "eslint * --fix"
  }
}
