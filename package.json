{
  "name": "@vtrbo/utils",
  "version": "0.2.0",
  "description": "Collection of common JavaScript or TypeScript utils.",
  "author": {
    "name": "Victor Bo",
    "email": "hi@vtrbo.cn"
  },
  "license": "MIT",
  "keywords": [
    "utils",
    "tools"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./*": {
      "types": "./dist/*/index.d.ts",
      "require": "./dist/*/index.js",
      "import": "./dist/*/index.mjs"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*/index.d.ts",
        "./dist/*"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "generate": "esno generate/entry.ts",
    "build": "nr generate && tsup",
    "dev": "nr generate && tsup --watch",
    "lint": "eslint .",
    "release": "nr build && bumpp && npm publish --access=public",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "playground:dev": "nr -C playground dev",
    "playground:build": "nr -C playground build",
    "docs:dev": "nr -C docs dev",
    "docs:build": "nr -C docs build",
    "docs:serve": "nr -C docs serve"
  },
  "devDependencies": {
    "@types/node": "^18.11.10",
    "@vtrbo/eslint-config": "^0.1.1",
    "@vtrbo/ni": "^0.0.5",
    "bumpp": "^8.2.1",
    "eslint": "^8.28.0",
    "esno": "^0.16.3",
    "fast-glob": "^3.2.12",
    "pnpm": "^7.17.1",
    "tsup": "^6.5.0",
    "typescript": "^4.9.3",
    "vite": "^3.2.4",
    "vitest": "^0.25.3"
  }
}
